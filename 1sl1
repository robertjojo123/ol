-- âœ… Debugging Startup
print("ğŸš€ Worker Turtle Booting Up...")

-- âœ… Ensure this runs only once, copies files, and makes itself persistent
if not fs.exists("/startup") then
    print("ğŸ“‚ Copying `startup.lua` from Disk Drive to Turtle...")
    shell.run("cp /disk/startup.lua /startup")

    print("ğŸ“‚ Copying `build.lua` from Disk Drive to Turtle...")
    shell.run("cp /disk/build.lua /build.lua")

    print("ğŸ”„ Rebooting to ensure persistence...")
    os.reboot()
end

-- âœ… Function: Read `block_data_index.txt`
local function getBlockDataIndex()
    local filename = "block_data_index.txt"
    if not fs.exists(filename) then
        print("âŒ ERROR: `block_data_index.txt` missing! Shutting down.")
        sleep(3)
        os.shutdown()
    end

    local file = fs.open(filename, "r")
    local index = tonumber(file.readAll())
    file.close()

    if not index then
        print("âŒ ERROR: `block_data_index.txt` is corrupt! Shutting down.")
        sleep(3)
        os.shutdown()
    end

    print("ğŸ“‚ Block Data Index:", index)
    return index
end

-- âœ… Function: Download `output.lua` if missing
local function checkForOutputFile()
    if not fs.exists("output.lua") then
        print("ğŸ“¥ `output.lua` missing, downloading...")

        local index = getBlockDataIndex()
        local blockDataBaseUrl = "https://raw.githubusercontent.com/robertjojo123/olympus2/refs/heads/main/output_"
        shell.run("wget " .. blockDataBaseUrl .. index .. ".lua output.lua")

        if not fs.exists("output.lua") then
            print("âŒ ERROR: Failed to download `output.lua`! Shutting down.")
            sleep(3)
            os.shutdown()
        else
            print("âœ… Successfully downloaded `output.lua`!")
        end
    else
        print("âœ… `output.lua` detected!")
    end
end

-- âœ… Function: Load Block Data
local function loadBlockData()
    checkForOutputFile()
    print("ğŸ“¥ Loading `output.lua`...")

    local chunk = loadfile("output.lua")
    if chunk then
        local success, data = pcall(chunk)
        if success and type(data) == "table" then
            print("âœ… Block data loaded successfully!")
            return data
        end
    end

    print("âŒ ERROR: Could not load output.lua")
    sleep(3)
    os.shutdown()
    return nil
end

-- âœ… Build Process
local function buildSchematic(data)
    if not data or #data == 0 then
        print("âŒ ERROR: Block data is empty!")
        sleep(3)
        os.shutdown()
        return
    end

    print("ğŸ› ï¸ Starting Build Process...")
    shell.run("build.lua") -- Runs the copied build program

    print("âœ… Build complete!")
end

-- âœ… Start Build Process
local function startBuild()
    print("ğŸš€ Starting Build Process...")
    local blockData = loadBlockData()
    if blockData then
        buildSchematic(blockData)
    else
        print("âŒ ERROR: No valid block data found!")
        sleep(3)
        os.shutdown()
    end

    print("ğŸ”´ Build complete. Shutting down...")
    os.shutdown()
end

startBuild()
